<html>
  <meta charset="utf-8">
  <form action=searches method=get>
    <input type=text name=q>
    <button type=submit>search</button>
  </form>
  <title>Search Result of <%= CGI.escapeHTML(keyword) %></title>
  <h1>Search Result of <%= CGI.escapeHTML(keyword) %></h1>
  <ul>
    <% results.each{|result| %>
      <li>
        <time datetime="<%= result[:date] %>"><%= result[:date] %></time>
        <a href=https://blog.jxck.io/<%= result[:url] %>#:~:text=<%= result[:keyword] %>><%= result[:title] %></a>
        <ul>
          <% result[:details].each{|detail| %>
            <li>
              <%= CGI.escapeHTML(detail[:prefix]) %>
              <a href=https://blog.jxck.io/<%= result[:url] %>#:~:text=<%= detail[:fragment] %>>
                <%= CGI.escapeHTML(detail[:keyword]) %>
              </a>
              <%= CGI.escapeHTML(detail[:suffix]) %>
            </li>
          <% } %>
        </ul>
      </li>
    <% } %>
  </ul>
</html>
